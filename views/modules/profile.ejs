<script type="text/ng-template" id="profile">
    <div ng-if='error' class="form-group row">
        <div class="col-sm-offset-2 col-sm-10 col-lg-6">
            <div ng-include="'common.error'" ng-controller="common.error"><div>
        </div>
    </div>
    <div
        ng-include="'common.vertical_list'"
        onload="init(profile.sections)"
        class="container-fluid">
    </div>
</script>

<script type="text/ng-template" id="profile.text">
    <p>{{element.text}}</p>
    <div ng-if="status.edit">
        <!-- move left/right within the row relative to other elements -->
        <nav>
          <ul class="pager">
            <li class="previous"><a href="#"><span aria-hidden="true">&larr;</span> Older</a></li>
            <li class="next"><a href="#">Newer <span aria-hidden="true">&rarr;</span></a></li>
          </ul>
        </nav>
        <form ng-submit="">
            <hr>
            <textarea class="form-control" rows="3"></textarea>
            <input type="text" ng-model="status.text_tmp"></input>
            <button type="submit" class="btn btn-default">+</button>
        </form>
    </div>
</script>
